<!-- c Add GridWithSplitter.xaml. -->

<Window
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="FunWithPanels" Height="191" Width="436">
	<Grid Background ="Yellow">
		<!-- Define columns -->
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width ="Auto"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<!-- Add this label to cell 0 -->
		<Label Name="lblLeft" Background ="YellowGreen" Grid.Column="0" Content ="Left!"/>

		<!-- Define the splitter.
		You can move splitter with mouse by dragging it.
		Width means the thickness of splitter. -->
		<GridSplitter Grid.Column ="0" Width ="50"/>

		<!-- Add this label to cell 1 -->
		<Label Name="lblRight" Grid.Column ="1" Content ="Right!"/>
	</Grid>
</Window>
