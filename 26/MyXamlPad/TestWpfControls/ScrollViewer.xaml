<!--c Add a ScrollViewer.xaml for testing functionality of ScrollViewer class which automatically generates scroll, when the window size can't contain every element which is in panel object.-->

<!--ScrollViewer class provides automatic scrolling for data within panel object.-->
<!--When the window size can't contain every element which is in panel object, the scroll bar is automatically created.-->

<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Fun with Panels!" Height="186" Width="501">

	<ScrollViewer>
		<StackPanel>
			<Button Content ="First" Background = "Green" Height ="40"/>
			<Button Content ="Second" Background = "Red" Height ="40"/>
			<Button Content ="Third" Background = "Pink" Height ="40"/>
			<Button Content ="Fourth" Background = "Yellow" Height ="40"/>
			<Button Content ="Fifth" Background = "Blue" Height ="40"/>
		</StackPanel>
	</ScrollViewer>
</Window>
